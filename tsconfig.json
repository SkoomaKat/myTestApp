{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@assets/*": ["assets/*"],
      "@fonts/*": ["assets/fonts/*"],
      "@maps/*": ["assets/maps/*"],
      "@images/*": ["assets/images/*"],
      "@nodeData/*": ["assets/nodeData/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
